<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	 <class name="com.persistent.Category" table="category">
        <id name="catId" type="java.lang.Integer">
            <column name="cat_id" />
            <generator class="native" />
        </id>
        <property name="catDesc" type="java.lang.String">
            <column name="cat_desc" length="100" />
        </property>
        <property name="catIsDeleted" type="java.lang.Integer">
            <column name="cat_is_deleted" length="1" />
        </property>
       
	</class>

</hibernate-mapping>