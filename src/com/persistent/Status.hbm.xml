<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	 <class name="com.persistent.Status" table="status">
        <id name="statusId" type="java.lang.Integer">
            <column name="status_id" />
            <generator class="native" />
        </id>
        <property name="statusDesc" type="java.lang.String">
            <column name="status_desc" length="100" />
        </property>
        <property name="statusIsDeleted" type="java.lang.Integer">
            <column name="status_is_deleted" length="1" />
        </property>
       
	</class>

</hibernate-mapping>