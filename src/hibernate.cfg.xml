<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
"-//Hibernate/Hibernate Configuration DTD//EN"
"http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
<session-factory>

      <!--property name="hibernate.connection.driver_class">com.inet.tds.TdsDriver</property-->
      <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
      <!--property name="hibernate.connection.url">jdbc:inetdae7:BMI57?1433;databaseName=epatest</property-->
      <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/task</property>
      <property name="hibernate.connection.username">root</property>
      <property name="hibernate.connection.password">root</property>
	  <!-- configuration pool via c3p0--> 
	<!--  <property name="hibernate.connection.provider_class">org.hibernate.connection.C3P0ConnectionProvider</property>-->
	  <property name="hibernate.c3p0.acquire_increment">1</property> 
	  <property name="hibernate.c3p0.idle_test_period">300</property> <!-- seconds --> 
	  <property name="hibernate.c3p0.max_size">50</property> 
	  <property name="hibernate.c3p0.min_size">0</property> 
	  <property name="hibernate.c3p0.max_statements">0</property> 
	  <property name="hibernate.c3p0.timeout">1000</property> <!-- seconds --> 
	  <!-- DEPRECATED very expensive property name="c3p0.validate>--> 

      
      <!--property name="hibernate.connection.pool_size">10</property-->
      <property name="show_sql">false</property>
      <property name="dialect">org.hibernate.dialect.MySQLDialect</property>
      <property name="hibernate.hbm2ddl.auto">update</property>
      <!-- Mapping files -->
      <mapping resource="com/persistent/Review.hbm.xml"/>
      <mapping resource="com/persistent/Message.hbm.xml"/>
      <mapping resource="com/persistent/Notification.hbm.xml"/>
      <mapping resource="com/persistent/Transaction.hbm.xml"/>
	  <mapping resource="com/persistent/User.hbm.xml"/>
	  <mapping resource="com/persistent/Category.hbm.xml"/>
	  <mapping resource="com/persistent/Response.hbm.xml"/>	
	  <mapping resource="com/persistent/Post.hbm.xml"/>
	  <mapping resource="com/persistent/Status.hbm.xml"/>
</session-factory>
</hibernate-configuration>
